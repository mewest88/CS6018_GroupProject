<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Title Text -->
    <style name="titleText">
        <item name="android:textSize">
            15sp
        </item>

        <item name="android:textColor">
            #000000
        </item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <!-- Sign Up Screen Enter Text -->
    <style name="enterText">
        <item name="android:textSize">
            15sp
        </item>

        <item name="android:textColor">
            #CCCACA
        </item>

        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <!-- large BMI Text -->
    <style name="bmiText">
        <item name="android:textSize">
            144sp
        </item>

        <item name="android:textColor">
            #4975CB
        </item>

        <item name="android:fontFamily">@font/rajdhani_semibold</item>
    </style>

    <color name="yellowHeader">#ffd561</color>

    <!-- Header Name Text -->
    <style name="headerNameText">
        <item name="android:textSize">
            16sp
        </item>

        <item name="android:textColor">
            #000000
        </item>

        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <!-- Health Level Text in Header -->
    <style name="healthLevelText">
        <item name="android:textSize">
            14sp
        </item>

        <item name="android:textColor">
            #6E6E6E
        </item>

        <item name="android:fontFamily">@font/rajdhani_semibold</item>
    </style>

    <!-- Button Text -->
    <style name="buttonText">
        <item name="android:textSize">
            40sp
        </item>

        <item name="android:textColor">
            #000000
        </item>

        <item name="android:fontFamily">@font/rajdhani_regular</item>
    </style>

    <!-- Text for Dynamic Calories and Health Goal -->
    <style name="dynamicHealthText">
        <item name="android:textSize">
            90sp
        </item>

        <item name="android:textColor">
            #4975CB
        </item>

        <item name="android:fontFamily">@font/rajdhani_semibold</item>
    </style>

    <!-- Weather Information Text -->
    <style name="weatherInfoText">
        <item name="android:textSize">
            20sp
        </item>

        <item name="android:textColor">
            #6E6E6E
        </item>

        <item name="android:fontFamily">@font/rajdhani_semibold</item>
    </style>
</resources>
